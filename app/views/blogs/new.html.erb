<div class="container">
  <%= form_for(@blog, html:{class: "form-signin"}, method: "post") do |f|%>
      <h2 class="form-signin-heading">发博客咯</h2>
      <label for="inputEmail" class="sr-only">标题</label>
      <%=f.text_field :title ,class:"form-control", placeholder:"标题", required: true%>
      <br>
      <label for="inputPassword" class="sr-only">内容</label>
      <%=f.text_area :content ,class:"form-control minh-200", placeholder:"内容", required: true%>
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">发布</button>
  <%end %>
</div>
